{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["scripts", "charts", "config"],
  "exclude": ["node_modules", "synth_yaml"]
}
